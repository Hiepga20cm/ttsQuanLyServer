<div class="mt-10" style="margin-left: 60px;">
    <form method="post" action="/search1">
        <div class="form-group">
            <label for="name">Từ Khóa</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Nhập từ khóa">
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>


    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ID</th>
                    <th scope="col">Tên</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">Ram</th>
                    <th scope="col">disk</th>


                    <th scope="col" colspan="2">Thời Gian tạo</th>

                </tr>
            </thead>
            <tbody>
                {{#each server}}
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="checkbox" value="{{this._id}}" name="serverIds[]" class="form-check-input">
                        </div>
                    </td>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.ram}}</td>
                    <td>{{this.disk}}</td>

                    <td>{{this.createdAt}}</td>

                    <td>
                        <a href="/server/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                        <a href="" class="btn btn-link" data-toggle="modal" data-target="#delete-server-modal"
                            data-id="{{this._id}}">Xóa</a>
                        <!-- tạo môt biến dữ liệu data mang tên id có giá trị bằng this._id được lấy từ db -->

                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Bạn chưa có server nào.
                        <a href="/server/create">Tạo thêm server</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>