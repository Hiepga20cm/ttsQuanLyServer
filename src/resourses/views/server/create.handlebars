<div class="mt-4" style="margin-left: 30px;">
    <h3>Tạo Server</h3>
    <form method="POST" action="/server/store">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name">

        </div>
        <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password">

        </div>

        <div class="mt-4 d-flex align-items-center">
            <div class="form-check">
                <!--<input class="form-check-input" type="checkbox" value="" id="defaultCheckBox" />-->
                <label class="form-check-lable" for="defaultCheckBox">
                    Trạng thái
                </label>
                <div>
                    <select class="form-control form-control-sm" id="status" name="status">
                        <option value="true">ON</option>
                        <option value="false">Off</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="ram">Ram</label>
            <input type="text" class="form-control" id="ram" name="ram">

        </div>
        <div class="form-group">
            <label for="disk">Disk</label>
            <input type="text" class="form-control" id="disk" name="disk">

        </div>

        <button type="submit" class="btn btn-primary">Thêm Server</button>
    </form>
</div>